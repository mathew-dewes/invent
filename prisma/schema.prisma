generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]
  vendors       Vendor[]
  stock         Stock[]
  requests      Request[]
  purchases Purchase[]
  costLedger CostLedger[]
  budget Budget[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model Vendor {
  id          String     @id @default(cuid())
  createdAt   DateTime   @default(now())
  name        String
  address     String?
  phone       String?
  email       String
  contactName String
  userId      String
  stock       Stock[]
  purchase    Purchase[]
  user        User       @relation(fields: [userId], references: [id])
  ledger CostLedger[]

  @@unique([userId, name])
}

model Stock {
  id           String     @id @default(cuid())
  createdAt    DateTime   @default(now())
  name         String
  quantity     Int
  partNumber   String
  location     String
  vendorId     String
  userId       String
  vendor       Vendor     @relation(fields: [vendorId], references: [id])
  user         User       @relation(fields: [userId], references: [id])
  brand        String
   unitCost     Decimal    @db.Decimal(10, 2)
  reorderPoint Int
  requests     Request[]
  purchases    Purchase[]
  costLedger CostLedger[]
}

model Request {
  id            String        @id @default(cuid())
  createdAt     DateTime      @default(now())
  customer      String
  requestNumber Int           @unique
  quantity      Int
  status        RequestStatus
  plantNumber   String
  note          String?
  stockItem     Stock         @relation(fields: [stockId], references: [id])
  user          User          @relation(fields: [userId], references: [id])
  stockId       String
  userId        String
}

model Purchase {
  id             String   @id @default(cuid())
  createdAt      DateTime @default(now())
  PO String
  purchaseNumber Int @unique
  status PurchaseStatus
  notes String?

  stockId  String
  quantity Int
  totalCost Decimal    @db.Decimal(10, 2)
  userId String
  vendorId String

  vendor Vendor @relation(fields: [vendorId], references: [id])
  user User @relation(fields: [userId], references: [id])
  stockItem Stock  @relation(fields: [stockId], references: [id])

}

model CostLedger {
  id             String   @id @default(cuid())
  createdAt      DateTime @default(now())
  type FinanceType

  requestId String?
  purchaseId String?
  stockId String
  vendorId String?
  userId String
  reference String

  plantNumber String?
  stockName String
  vendorName String?
  quantity Int
  unitCost Decimal    @db.Decimal(10, 2)
  totalCost Decimal    @db.Decimal(10, 2)

  month Int
  year Int

  vendor Vendor? @relation(fields: [vendorId], references: [id])
  user User @relation(fields: [userId], references: [id])
  stock Stock @relation(fields: [stockId], references: [id])

}

model Budget {
    id             String   @id @default(cuid())
    createdAt      DateTime @default(now())
    userId String
    month Int
    year Int
    amount Decimal @db.Decimal(10, 2)

    user User @relation(fields: [userId], references: [id])
     @@unique([userId, month, year])
}



enum RequestStatus {
  OPEN
  READY
  COMPLETE
}

enum PurchaseStatus {
  PLACED
  RECEIVED
  DELAYED
}

enum FinanceType {
  REQUEST
  PURCHASE
}
